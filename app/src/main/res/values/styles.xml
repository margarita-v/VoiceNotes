<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/AppTheme.ActionModeTheme</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Style for a contextual action bar -->
    <style name="AppTheme.ActionModeTheme" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/colorPrimary</item>
    </style>

    <!-- Theme for buttons with ripple effect -->
    <style name="AppTheme.ButtonThemeWithRipple">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorRipple</item>
    </style>

    <!-- Theme for a note item with ripple effect -->
    <style name="AppTheme.NoteItemThemeWithRipple">
        <item name="colorButtonNormal">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorChosenItem</item>
    </style>

    <!-- Style for divider view -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <!-- Styles for a custom FAB with additional actions -->

    <style name="MenuLabelsStyle">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MenuMainButtonStyle">
        <item name="menu_labels_style">@style/MenuLabelsStyle</item>
        <item name="menu_labels_showAnimation">@anim/jump_from_down</item>
        <item name="menu_labels_hideAnimation">@anim/jump_to_down</item>
        <item name="menu_animationDelayPerItem">0</item>
        <item name="menu_shadowColor">@color/colorShadow</item>
        <item name="menu_colorNormal">@color/colorAccent</item>
        <item name="menu_colorPressed">@color/colorPressed</item>
        <item name="menu_colorRipple">@color/colorRipple</item>
        <item name="menu_labels_singleLine">true</item>
        <item name="menu_backgroundColor">@color/colorBackground</item>
    </style>

    <style name="FabStyle">
        <item name="fab_showAnimation">@anim/jump_from_down</item>
        <item name="fab_hideAnimation">@anim/jump_to_down</item>
        <item name="fab_shadowColor">@color/colorShadow</item>
        <item name="fab_colorNormal">@color/colorAccent</item>
        <item name="fab_colorPressed">@color/colorPressed</item>
        <item name="fab_colorRipple">@color/colorRipple</item>
    </style>

    <style name="MenuButtonsStyle" parent="FabStyle">
        <item name="fab_size">mini</item>
    </style>
</resources>
